---
title: 'Writing'
layout: 'base'
---

<main class="LayoutContainer SlimLayoutContainer">
  <h1 class="VisuallyHidden">Blog Posts</h1>

  <article class="WritingListItem">
    <div class="Title">
      <a href="https://8thlight.com/insights/an-apprentices-community">An Apprentice's Community</a>
    </div>

    <span class="Date">January 21, 2013</span>

    <p class="Description">Musings on the path of an aspiring software developer</p>
  </article>

  {% for post in collections.posts | reverse %}
    <article class="WritingListItem">
      <div class="Title">
        <a href="{{ post.url }}">{{ post.data.title }}</a>
      </div>

      <span class="Date">{{ post.data.date | asPostDate }}</span>

      <p class="Description">{{ post.data.description }}</p>
    </article>
  {% endfor %}
</main>
